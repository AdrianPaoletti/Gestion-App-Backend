{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "noEmitOnError": true
  },
  "include": ["./**/*.ts", ".eslintrc.js"],
  "exclude": ["./dist", "node_modules"]
}
